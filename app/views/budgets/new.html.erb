<!-- Validation failure messages -->
<% if @budget.errors.any? %>
  <% @budget.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Budget</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_budget" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for income -->
      <div class="form-group">
        <label for="income" class="control-label">
          Income
        </label>

        <input type="text" id="income" name="income" placeholder="Income" class="form-control" value="<%= @budget.income %>">
      </div>


      <button class="btn btn-success">
        Create Budget
      </button>
      or
      <a href="/budgets">Cancel</a>
    </form>
  </div>
</div>

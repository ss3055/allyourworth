<div class="page-header">
  <h1>
    Spends
    <a href="/spends/new" class="btn btn-lg btn-success">New Spend</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Account name</th>
        <th>Category</th>
        <th>Transaction</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Classification</th>
        <th>Actions</th>
      </tr>

      <% @spends.each do |spend| %>
      <tr>
        <td><%= spend.description %></td>
        <td><%= spend.account_name %></td>
        <td><%= spend.category %></td>
        <td><%= spend.trans %></td>
        <td><%= spend.amount %></td>
        <td><%= spend.date %></td>
        <td><%= spend.classification %></td>
        <td>
          <a href="/spends/<%= spend.id %>" class="btn btn-primary">Show</a>
          <a href="/spends/<%= spend.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_spend/<%= spend.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
